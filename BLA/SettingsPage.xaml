<Page x:Class="BLA.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BLA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">
    <Page.Resources>
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>
    
    <Grid Background="#1C1C1C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок страницы -->
        <TextBlock Text="Настройки" 
                   Foreground="White" 
                   FontSize="30" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20" />

        <!-- Контент -->
        <StackPanel Grid.Row="1" Margin="20" >
            <!-- Смена темы -->


            <!-- Смена языка -->
            <StackPanel>
                <TextBlock Text="Размер экрана" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="SemiBold" />
                <ComboBox x:Name="sizeComboBox" Width="200" Margin="0,10,540,20" FontSize="16" SelectionChanged="sizeComboBox_SelectionChanged" HorizontalAlignment="Left" >
                </ComboBox>
            </StackPanel>




        </StackPanel>
        <!-- Сброс настроек -->
        <Button Content="Сбросить настройки" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                   Style="{StaticResource DarkButton}"
                    Width="200"
                    Height="40"
                    Margin="0 0 0 15"
                    Click="ResetSettings_Click" Grid.Row="1" />
    </Grid>
</Page>
