<Window x:Class="BLA.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLA"
        mc:Ignorable="d"
        Title="Вход" Height="430" Width="280" WindowStartupLocation="CenterScreen" Icon="assets/icon.ico" MaxHeight="430" MaxWidth="300" MinWidth="280" MinHeight="370">



    <Grid Background="#1C1C1C" Margin="0,0,0,-64">
        <!-- Заголовок "Вход" сверху -->
        <Label Content="Вход" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,10" />

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="250" Margin="0,47,0,0" Height="354">
            <Label Content="Имя пользователя" />
            <TextBox x:Name="UsernameBox" Width="220" />

            <Label Content="Пароль" />
            <!-- Используется стиль для PasswordBox -->
            <PasswordBox x:Name="PasswordBox" Width="220" Margin="0,0,0,20" Height="28" VerticalAlignment="Center" HorizontalAlignment="Center" />

            <Button x:Name="LoginButton" Content="Войти" Style="{StaticResource DarkButton}" Width="130" Height="32" Click="LoginButton_Click" />
            <Button x:Name="helpBtn" Content="Помощь" Style="{StaticResource DarkButton}" Width="130" Height="32" Margin="0,10,0,0" Click="helpBtn_Click" />
            <!-- Add this button near your help button -->
            <Button x:Name="configBtn" Content="Настройка подключения" Style="{StaticResource DarkButton}" 
        Width="180" Height="32" Margin="0,10,0,0" Click="configBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
