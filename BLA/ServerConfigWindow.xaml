<Window x:Class="BLA.ServerConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLA"
        mc:Ignorable="d"
        Background="Transparent"
        Title="Настройка подключения" Height="200" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#1C1C1C" Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Имя сервера SQL Server" Foreground="White"/>
            <TextBox x:Name="ServerNameTextBox" Margin="0,5,0,15" Height="28"/>

            <Button x:Name="SaveButton" Content="Сохранить" 
                    Width="120" Height="32" HorizontalAlignment="Center" Style="{StaticResource DarkButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>